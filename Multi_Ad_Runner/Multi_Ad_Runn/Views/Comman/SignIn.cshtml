@model Multi_Ad_Runn.Models.Login
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/User_MasterPage.cshtml";
}
@using (Html.BeginForm("SignIn", "Comman", FormMethod.Post))
{
    <section id="main" class="clearfix user-page">
        <div class="container">
            <div class="row text-center">

                <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <div class="user-account">
                        <h2> Login</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form action="#">
                            <div class="form-group">
                                @*<input type="text" class="form-control" placeholder="Email Id">*@
                                Publisher : @Html.RadioButtonFor(model => model.Log_Role,"Publisher", new { @class = "form-control" })
                                User :@Html.RadioButtonFor(model => model.Log_Role, "User", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Log_Role, "", new { @class = "alert alert-danger" })
                            </div>
                            <div class="form-group">
                                @*<input type="text" class="form-control" placeholder="Email Id">*@
                                @Html.TextBoxFor(model => model.Log_Email, htmlAttributes: new { @class = "form-control", @placeholder = "Enter User Email Id" })
                                @Html.ValidationMessageFor(model => model.Log_Email, "", new { @class = "alert alert-danger" })
                            </div>
                            <div class="form-group">
                                @*<input type="password" class="form-control" placeholder="Password">*@
                                @Html.PasswordFor(model => model.Log_Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Password " })
                                @Html.ValidationMessageFor(model => model.Log_Password, "", new { @class = "alert alert-danger" })
                            </div>
                            <button type="submit" class="btn">Login</button>
                        </form>
                        <div class="alert alert-danger">@Html.ViewData["Message"]</div>
                       
                    </div>
                    <a href="~/UserMaster/SignUp" class="btn-primary">Create a New Account</a>
                    
                </div>
            </div>
        </div>
    </section>
}
