@model Multi_Ad_Runn.Areas.Admin_Panel.Data.Publisher_Master
@{
    ViewBag.Title = "AddPublisher";
    Layout = "~/Areas/Admin_Panel/Views/Admin_MasterPage.cshtml";
}
@using (Html.BeginForm("AddPublisher", "Publisher_Master", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Publisher</h4>
                        <div class="basic-form">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-success" })
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label> Publisher Name</label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @Html.TextBoxFor(model => model.Pu_Name, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Publisher Name" })
                                        @Html.ValidationMessageFor(model => model.Pu_Name, "", new { @class = "alert alert-danger" })
                                    </div>

                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Publisher Email Id</label>
                                        @*<input type="password" class="form-control" placeholder="Password">*@
                                        @Html.TextBoxFor(model => model.Pu_Email, htmlAttributes: new { @class = "form-control", @placeholder = "Enter User Email Id" })
                                        @Html.ValidationMessageFor(model => model.Pu_Email, "", new { @class = "alert alert-danger" })
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Contact No. </label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @Html.TextBoxFor(model => model.Pu_Contact, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Contact No " })
                                        @Html.ValidationMessageFor(model => model.Pu_Contact, "", new { @class = "alert alert-danger" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Categpry</label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @*@Html.PasswordFor(model => model.U_Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Password " })*@
                                        @Html.DropDownListFor(model => model.C_Id, Model.Category_Master, "Please Select Category", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.C_Id, "", new { @class = "alert alert-danger" })
                                    </div>

                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>WebSite </label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @Html.TextBoxFor(model => model.Pu_WebSite, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Website Name Or Link" })
                                        @Html.ValidationMessageFor(model => model.Pu_WebSite, "", new { @class = "alert alert-danger" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Password</label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @Html.PasswordFor(model => model.Pu_Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Password " })
                                        @*@Html.DropDownListFor(model => model.C_Id, Model.Category_Master, "Please Select Category", new { @class = "form-control" })*@
                                    </div>

                                </div>

                                <button type="submit" class="btn btn-dark">Save Data</button>
                            </form>
                            <div class="alert alert-success">@Html.ViewData["Message"]</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Areas/Admin_Panel/plugins/common/common.min.js"></script>
<script src="~/Areas/Admin_Panel/js/custom.min.js"></script>
<script src="~/Areas/Admin_Panel/js/settings.js"></script>
<script src="~/Areas/Admin_Panel/js/gleek.js"></script>
<script src="~/Areas/Admin_Panel/js/styleSwitcher.js"></script>


