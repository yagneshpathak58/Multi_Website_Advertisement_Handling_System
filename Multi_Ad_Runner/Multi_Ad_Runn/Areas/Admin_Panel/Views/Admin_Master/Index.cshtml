        <div class="login-form-bg h-100">
            <div class="container h-100">
                <div class="row justify-content-center h-100">
                    <div class="col-xl-6">
                        <div class="form-input-content">
                            <div class="card login-form mb-0">
                                <div class="card-body pt-5">
                                    <a class="text-center" href="index.html"> <h4>Login</h4></a>
                                    @using (Html.BeginForm("Index", "Admin_Master", FormMethod.Post))
                                    {
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @*@Html.ValidationSummary(true,"", new {@class = "alert alert-danger" })*@
                                        <div class="mt-5 mb-5 login-input">
                                            <div class="form-group">
                                                @*<input type="email" class="form-control" placeholder="Email">*@
                                                @Html.TextBoxFor(model => model.A_U_Name, htmlAttributes: new { @class = "form-control", @placeholder = "User Name" })
                                                @Html.ValidationMessageFor(model => model.A_U_Name, "", new { @class = "alert alert-danger" })
                                            </div>
                                            <div class="form-group">
                                                @*<input type="password" class="form-control" placeholder="Password">*@
                                                @Html.PasswordFor(model => model.A_Password, htmlAttributes: new { @class = "form-control", @placeholder = "Password" })
                                                @Html.ValidationMessageFor(model => model.A_Password, "", new { @class = "alert alert-danger" })
                                            </div>
                                            <button class="btn login-form__btn submit w-100">Sign In</button>
                                        </div>
                                        <div class="alert alert-danger">@Html.ViewData["Message"]</div>
                                        
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



