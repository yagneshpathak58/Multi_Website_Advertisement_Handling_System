@model Multi_Ad_Runn.Areas.Admin_Panel.Data.User_Master



@{
    ViewBag.Title = "AddUser";
    Layout = "~/Areas/Admin_Panel/Views/Admin_MasterPage.cshtml";
}

@using (Html.BeginForm("AddUser", "User_Master", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add User</h4>
                        <div class="basic-form">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "text-success" })
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label> User Name</label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @Html.TextBoxFor(model => model.U_Name, htmlAttributes: new { @class = "form-control", @placeholder = "Enter User Name" })
                                        @Html.ValidationMessageFor(model => model.U_Name, "", new { @class = "alert alert-danger" })
                                    </div>

                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>User Email Id</label>
                                        @*<input type="password" class="form-control" placeholder="Password">*@
                                        @Html.TextBoxFor(model => model.U_Email, htmlAttributes: new { @class = "form-control", @placeholder = "Enter User Email Id" })
                                        @Html.ValidationMessageFor(model => model.U_Email, "", new { @class = "alert alert-danger" })
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Contact No. </label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @Html.TextBoxFor(model => model.U_Contact, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Contact No " })
                                        @Html.ValidationMessageFor(model => model.U_Contact, "", new { @class = "alert alert-danger" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Password</label>
                                        @*<input type="email" class="form-control" placeholder="Email">*@
                                        @Html.PasswordFor(model => model.U_Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Password " })
                                    </div>

                                </div>

                                <button type="submit" class="btn btn-dark">Save Data</button>
                            </form>
                            <div class="alert alert-success">@Html.ViewData["Message"]</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Areas/Admin_Panel/plugins/common/common.min.js"></script>
<script src="~/Areas/Admin_Panel/js/custom.min.js"></script>
<script src="~/Areas/Admin_Panel/js/settings.js"></script>
<script src="~/Areas/Admin_Panel/js/gleek.js"></script>
<script src="~/Areas/Admin_Panel/js/styleSwitcher.js"></script>

